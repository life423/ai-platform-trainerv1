        "hidden_size": 64,
        "output_size": 2,
        "random_speed_factor_min": 0.8,
        "random_speed_factor_max": 1.2,
        "enemy_min_speed": 2
    },
    "paths": {
        "data_path": "data/raw/training_data.json"
    },
    "launcher": {
        "mode": "DI",
        "options": {
            "comment": "Valid values for launcher_mode: STANDARD, DI, STATE_MACHINE",
            "default": "DI"
